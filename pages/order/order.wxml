<view class="driver-info">
  <view class="driver-title">
    <image mode="aspectFill" src="{{driver.pictureSmall}}" class="driver-head" />
    <view class='content'>
      <view style="margin-top: 15rpx;">
        <text class="driver-name">{{driver.name}}</text>
        <view class="xing">
          <image src='{{xing}}'></image>
          <text>{{newLevel}}</text>
        </view>
        <text class="face">已通过人脸识别</text>
      </view>
      <view class="sec-line">
        <text class="driver-id">{{driver.driverId}}</text>
        <text>驾龄 : {{driver.year}}年</text>
      </view>
    </view>
    <view bindtap="callPhone" class="call-link">
      <image mode="aspectFill" src="{{phoneIcon}}" class="call-link-img" />
    </view>
  </view>
  <view class="clear"></view>
  <view class="notice">{{notice}}</view>
</view>

<map id="map" style="width:100%;height:{{map.mapHeight}}px" scale="15" longitude="{{map.longitude ? map.longitude : 116.1544990540}}" latitude="{{map.latitude ? map.latitude : 39.8468989874}}" polyline="{{polyline}}" markers="{{markers}}" bindcallouttap="orderDetails">
  <cover-view class="cancel" wx-if="{{modalHidden}}" bindtap="confirmCancel">取消订单</cover-view>
</map>