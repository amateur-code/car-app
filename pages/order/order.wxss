.order-page{
  display: flex;
}
.left{
  padding: 0 20rpx;
  margin: 9.75rpx;
  width: 280rpx;
  background: rgba(255,255,255,0.95);
  box-shadow: 0 0 4px 0 rgba(0,0,0,0.15), 0 14px 32px 2px rgba(0,0,0,0.15);
  border-radius: 5rpx;
}

#map{
  flex: 1;
  height: 100vh;
}

.driver-info {
  position: relative;
  height: 100%;
  padding-bottom: 62rpx;
}

.driver-title{
  padding: 11rpx 0;
  display: flex;
  align-items: center;
  font-size: 13rpx;
  line-height: 20rpx;
  color: #7D7E80;
  border-bottom: 1px solid #D5D8DF;
}
.driver-head {
  width: 49rpx;
  height: 49rpx;
  border-radius: 50%;
}
.content{
  flex:1;
  padding: 0 8rpx;
}
.driver-name{
  color: #19191A;
  line-height: 29rpx;
}

.call-link {
  width: 33rpx;
  height: 33rpx;
}

.driver-body{
  padding: 11rpx 0;
  display: flex;
  align-items: center;
  font-size: 13rpx;
  line-height: 20rpx;
}

.notice {
  padding: 11rpx 0;
  font-size: 14rpx;
  color: #19191A;
  line-height: 18rpx;
}

.cancel{
  position: absolute;
  width: 100%;
  height: 35rpx;
  border-radius: 4rpx;
  bottom: 12rpx;
  font-size: 12rpx;
  line-height: 35rpx;
  color: #3B414D;
  background: #ffffff;
  text-align: center;
  border: 1rpx solid #3B414D;
}