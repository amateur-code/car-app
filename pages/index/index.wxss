.index-page{
  display: flex;
}

 /*  --------------left----------------  */
.address-wrapper{
  padding: 20rpx;
  margin: 9.75rpx;
  width: 280rpx;
  background: rgba(255,255,255,0.95);
  box-shadow: 0 0 4px 0 rgba(0,0,0,0.15), 0 14px 32px 2px rgba(0,0,0,0.15);
  border-radius: 5rpx;
}

.user{
  display: block;
  width: 40rpx;
  height: 40rpx;
}

.address-msg{
  position: relative;
  margin-top: 20rpx;
  width: 100%;
  height: 94rpx;
  background: #FFFFFF;
  border: 1px solid #E8E9EB;
  border-radius: 5rpx;
}
.start,
.end{
  display: flex;
  width: 100%;
  height: 47rpx;
  line-height: 0;
  align-items: center;
  
}
.start image,
.end image{
  display: block;
  margin: 0 11.7rpx;
  width: 15.6rpx;
  height: 15.6rpx;
}

.start text,
.end text{
  flex: 1;
  height: 47rpx;
  font-size: 14.04rpx;
  color: #19191A;
  line-height: 47rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.start text{
  border-bottom: 1px solid #E8E9EB;
}
.end text{
  color: #BCBCBC;
}

.dynamic{
  margin-top: 10rpx;
  font-size: 11.7rpx;
  text-align: center;
  line-height: 20rpx;
}

#map{
  flex: 1;
  height: 100vh;
}

.center_btn{
  position: absolute;
  left: 300rpx;
  bottom: 11rpx;
  width: 46rpx;
  height: 46rpx;
}