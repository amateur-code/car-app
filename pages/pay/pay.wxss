page{
  background: #f5f5f5;
}
.flex-between{
  display: flex;
  display: -webkit-flex;
  justify-content: space-between;
}
.pay-container{
  display: flex;
  display: -webkit-flex;
  flex-direction: column;
  align-items: center;
}
.title{
  padding: 50rpx 30rpx;
  font-size: 30rpx;
  color: #999999;
}
.content{
  width: 635rpx;
  height: auto;
  font-size: 0;
}
.content .pay-line{
  width: 635rpx;
  height: 11rpx;
}
.content .info{
  width: 610rpx;
  position: relative;
  top: -6rpx;
  right: -14rpx;
}
.content .info .layout{
  padding:0 40rpx 0 12rpx;
  font-size: 100rpx;
  background: #fff;
}
.layout .header{
  font-size: 24rpx;
  align-items: center;
  padding-left: 10rpx;
  /* padding: 30rpx 0 30rpx 5rpx; */
}
.layout .header .order-name{
  position: relative;
  top: -8rpx;
}
.layout .header .order-name .phone-icon{
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  padding: 30rpx 0 30rpx 20rpx;
  position: relative;
  top: 8rpx;
}
.layout .header .order-name .phone-icon image{
  width: 32rpx;
  height: 32rpx;
}
.layout .address{
  padding: 15rpx 0 15rpx 5rpx;
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0 ;
}
.layout .address .right-icon{
  width: 14rpx;
  height: 24rpx;
  padding-top: 50rpx;
}
.fee-detail .right-icon{
  width: 14rpx;
  height: 24rpx;
  margin-left:15rpx;
  position: relative;
  top: 3rpx;
}
.layout .address .ad{
  padding: 15rpx 40rpx;
  font-size: 26rpx;
  color: #999999;
  position: relative;
}
/* .layout .address.cancelAddress .ad{
  padding: 24px 30px;
} */
.layout .address .ad text{
  color: #000;
}
.layout .address .ad::before{
  content: '';
   display: block;
   width:  16rpx;
   height: 16rpx;
   border-radius: 50%;
   position: absolute;
   left: 10rpx;
   top: 50%;
   margin-top: -8rpx;
}
.layout .address .ad.start-ad::before{
  background: #2bd48b;
}
.layout .address .ad.end-ad::before{
  background: #ff6113;
}
.layout .fee-detail{
  font-size: 26rpx;
  padding: 23rpx 0 23rpx 10rpx;
}
.layout .cancelReason{
  padding: 30rpx 0 60rpx;
  font-size: 26rpx;
  text-align: center;
  border-top: 1rpx solid #eeeeee;
}
.layout .cancelRule{
  padding-bottom: 40rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
}
.layout .cancelRule .btn{
  padding-left: 10rpx;
  display: inline-block;
  height: 30rpx;
  position: relative;
}
.layout .cancelRule .icon{
  width: 30rpx;
  height: 30rpx;
  position: relative;
  top: 4rpx;
}
.content .info .sawtooth{
  width: 610rpx;
  height: 13rpx;
}
button.payCommit{
  position: fixed;
  width: 635rpx;
  bottom: 70rpx;
  line-height: 90rpx;
  font-size: 34rpx; 
  border-radius: 5rpx;
}
