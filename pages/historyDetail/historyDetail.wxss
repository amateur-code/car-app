Page {
  background: #f5f5f5;
  overflow-x: hidden;
  overflow-y: auto;
}

.costEstimate-box {
  padding: 95rpx;
}
.totalFee-box {
  font-size: 100rpx;
  text-align: center;
}

.totalFee-box .txt {
  font-size: 24rpx;
}

.tip-box {
  display: flex;
  display: -webkit-flex;
  height: 35rpx;
  width: 100%;
  color: #19191A;
  font-size: 20rpx;
  align-items: center;
  justify-content: center;
  margin: 140rpx 0 40rpx;
}
.totalFee-box{
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  line-height: 100rpx;
  height: 100rpx;
  font-size: 100rpx;
  text-align: center;
}
.totalFee-box .txt{
  position: absolute;
  right: -24rpx;
  bottom: -24rpx;
  font-size: 24rpx;
}
.detail-box {
  display: flex;
  display: -webkit-flex;
  font-size: 24rpx;
  padding-bottom: 25rpx;
  align-items: center;
  justify-content: center;
}

.detail-box .left {
  max-width: 300rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  color: #333;
}
.detail-box.isReduce, .detail-box.isReduce .left{
  color: #FF4B14;
}
.detail-box .line {
  flex: 1;
  /* padding-bottom: 25rpx; */
  margin: 0 10rpx;
  width: 100%;
  height: 0;
  border-bottom: 1px dashed #333;
}

.show-rule {
  font-size: 24rpx;
  position: fixed;
  width: 100%;
  text-align: center;
}
